@using CINEMA.EF;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="home">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="owl-carousel owl-theme slide " id="featured">
                    @{
                        foreach (var item in ViewData["Banner"] as IEnumerable<Banner>)
                        {
                            <div class="item">
                                <article class="featured">
                                    <div class="overlay"></div>
                                    <figure>
                                        <img src="/Upload/Banner/@item.Image" alt="Sample Article">
                                    </figure>
                                </article>
                            </div>  
                        }

                    }
                </div>
                <div class="line">
                    <div>MOVIE SELECTION</div>
                </div>
                <div class="row">
                    <!-- map -->
                    @{ 
                        foreach (var item in ViewData["PhimMoi"] as IEnumerable<Phim>)
                        {
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="row">
                            <article class="article col-md-12">
                                <div class="inner">
                                    <figure id="imgpost">
                                        <a href="@Url.Action("ChiTiet",new { controller="Phim" , id=item.id })">
                                            <img src="/Upload/Poster/@item.Poster" alt="Sample Article">
                                        </a>
                                    </figure>
                                    <div class="padding">
                                        <div class="tenphim">
                                            <h2><span id="spantenphim">@item.Ten</span></h2>
                                        </div>
                                        <ul id="ulthongtin">
                                            <li>
                                                <span class="saptt">Thể loại:</span>&nbsp;&nbsp;@item.TheLoai
                                            </li>
                                            <li>
                                                <span class="saptt">Thời lượng:</span>&nbsp;&nbsp;@item.ThoiLuong&nbsp;&nbsp;Phút
                                            </li>
                                            <li>
                                                <span class="saptt">Khởi chiếu:</span>&nbsp;&nbsp;@String.Format("{0:dd/MM/yyyy}",item.NgayCongChieu)
                                            </li>
                                        </ul>
                                        <footer>
                                            <a href="#" class="love">
                                                <i class="ion-android-favorite-outline"></i>
                                                <div>99</div>
                                            </a>
                                            <a class="btn btn-primary more" href="@Url.Action("LichChieu",new { controller="Phim", id=item.id})">
                                                <div>Đặt vé</div>
                                                <div><i class="ion-ios-arrow-thin-right"></i></div>
                                            </a>
                                        </footer>
                                    </div>
                                </div>
                            </article>
                        </div>
                    </div>
                        }
                        }
                </div>
            </div>
        </div>
    </div>
</section>
<section class="maps">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.830592765794!2d106.68783831411625!3d10.747536262666792!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f084760cd35%3A0xf9643c63e560c67a!2zMTU3LzUyIETGsMahbmcgQsOhIFRy4bqhYywgUGjGsOG7nW5nIDEsIFF14bqtbiA4LCBI4buTIENow60gTWluaCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1557642198305!5m2!1svi!2s"
                        width="100%" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</section>