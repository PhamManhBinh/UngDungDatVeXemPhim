@model IEnumerable<CINEMA.EF.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">
        Người Dùng
        @Html.ActionLink("+", "Create", new { controller = "User" }, new { @class = "btn btn-success btn-circle pull-left" })
    </h1>
    <div class="text-danger">
        @ViewBag.Error
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>Họ Tên</th>
                            <th>Giới Tính</th>
                            <th>Ngày Sinh</th>
                            <th>Số điện thoại</th>
                            <th>Quyền</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>Họ Tên</th>
                            <th>Giới Tính</th>
                            <th>Ngày Sinh</th>
                            <th>Số điện thoại</th>
                            <th>Quyền</th>
                            <th></th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>
                                        @if (item.Gender == true)
                                        {@Html.Raw("Nam")}
                                    else
                                    {@Html.Raw("Nữ")}
                                    </td>
                                    <td>@String.Format("{0:dd/MM/yyyy}", item.Birthday)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Permission)</td>
                                    <td>
                                        <a href="@Url.Action("Edit","User",new { id=item.id})" class="btn btn-success btn-circle btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete","User",new { id=item.id})" class="btn btn-danger btn-circle btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
