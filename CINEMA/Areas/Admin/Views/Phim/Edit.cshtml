@model CINEMA.EF.Phim

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Sửa Phim</h1>
    <div class="row justify-content-center">

        <div class="col-xl-8 col-lg-12 col-md-9">
            @using (Html.BeginForm("Edit", "Phim", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)
                <div class="form-group">
                    @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Tên Phim...", aria_describedby = "emailHelp" } })
                    @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.NgayCongChieu, new { htmlAttributes = new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Ngày Công Chiếu...", type = "date", onfocus = "(this.type='date')", aria_describedby = "emailHelp" } })
                    @Html.ValidationMessageFor(model => model.NgayCongChieu, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <!--div class="upload-btn-wrapper"-->
                    <label>Chọn Ảnh Poster: </label>
                    <input type="file" name="PosterImage" aria-describedby="emailHelp" /><br />
                    @Html.HiddenFor(model => model.Poster)
                    <!--/div-->
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.TraiLer, new { htmlAttributes = new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Trailer Phim...", aria_describedby = "emailHelp" } })
                    @Html.ValidationMessageFor(model => model.TraiLer, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.ThoiLuong, new { htmlAttributes = new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Thời Lượng...", aria_describedby = "emailHelp" } })
                    @Html.ValidationMessageFor(model => model.ThoiLuong, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.DaoDien, new { htmlAttributes = new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Đạo Diễn...", aria_describedby = "emailHelp" } })
                    @Html.ValidationMessageFor(model => model.DaoDien, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.DienVien, new { htmlAttributes = new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Diễn Viên...", aria_describedby = "emailHelp" } })
                    @Html.ValidationMessageFor(model => model.DienVien, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.TheLoai, new { htmlAttributes = new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Thể Loại...", aria_describedby = "emailHelp" } })
                    @Html.ValidationMessageFor(model => model.TheLoai, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(model => model.NoiDungPhim,  new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Nội Dung Phim...", aria_describedby = "emailHelp"  })
                    @Html.ValidationMessageFor(model => model.NoiDungPhim, "", new { @class = "text-danger" })
                </div>
                <input type="submit" class="btn btn-primary" value="Lưu">
            }
        </div>
    </div>

    <!-- Page Heading -->
    <!-- DataTales Example -->
    @Html.ActionLink("Quay lại", "Index")

</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
