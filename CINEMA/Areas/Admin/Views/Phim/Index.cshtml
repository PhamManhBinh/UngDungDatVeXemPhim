@model IEnumerable<CINEMA.EF.Phim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">
        Phim
        @Html.ActionLink("+", "Create", new { controller = "Phim" }, new { @class = "btn btn-success btn-circle pull-left" })
    </h1>
    <div class="text-danger">
        @ViewBag.Error
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.id)</th>
                            <th>@Html.DisplayNameFor(model => model.Ten)</th>
                            <th>@Html.DisplayNameFor(model => model.NgayCongChieu)</th>
                            <th>@Html.DisplayNameFor(model => model.Poster)</th>
                            <th>@Html.DisplayNameFor(model => model.ThoiLuong)</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.id)</th>
                            <th>@Html.DisplayNameFor(model => model.Ten)</th>
                            <th>@Html.DisplayNameFor(model => model.NgayCongChieu)</th>
                            <th>@Html.DisplayNameFor(model => model.Poster)</th>
                            <th>@Html.DisplayNameFor(model => model.ThoiLuong)</th>
                            <th></th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                                    <td>@String.Format("{0:dd/MM/yyyy}", item.NgayCongChieu)</td>
                                    <td><img src="/Upload/Poster/@item.Poster" height="150" /></td>
                                    <td>@Html.DisplayFor(modelItem => item.ThoiLuong) phút</td>
                                    <td>
                                        <a href="@Url.Action("Edit","Phim",new { id=item.id})" class="btn btn-success btn-circle btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete","Phim",new { id=item.id})" class="btn btn-danger btn-circle btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->