}

<!-- Begin Page Content -->
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Xóa Đồ Ăn</h1>
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-12 col-md-9">
            <h3 class="h3 mb-2 text-gray-800">Bạn có chắc chắn muốn xóa món ăn này không?</h3>
            <dl class="dl-horizontal">
                <div class="form-group">
                    <dt>
                        @Html.DisplayNameFor(model => model.id) Món
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.id)
                    </dd>
                </div>
                <div class="form-group">
                    <dt>
                        @Html.DisplayNameFor(model => model.TenMon)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TenMon)
                    </dd>
                </div>
                <div class="form-group">
                    <dt>
                        @Html.DisplayNameFor(model => model.MoTa)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MoTa)
                    </dd>
                </div>
