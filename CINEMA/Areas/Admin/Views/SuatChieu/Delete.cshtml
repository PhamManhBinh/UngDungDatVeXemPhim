@model CINEMA.EF.SuatChieu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Begin Page Content -->
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Xóa Suất Chiếu</h1>
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-12 col-md-9">
            <h3 class="h3 mb-2 text-gray-800">Bạn có chắc chắn muốn xóa suất chiếu này không?</h3>
            <dl class="dl-horizontal">
                <div class="form-group">
                    <dt>
                        ID Suất Chiếu
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.id)
                    </dd>
                </div>
                <div class="form-group">
                    <dt>
                        Phim
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Phim.Ten)
                    </dd>
                </div>
                <div class="form-group">
                    <dt>
                        Thời Gian Bắt Đầu
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ThoiDiemBatDau)
                    </dd>
                </div>
                <div class="form-group">
                    <dt>
                        Thời Gian Kết Thúc
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ThoiDiemKetThuc)
                    </dd>
                </div>
                <div class="form-group">
                    <dt>
                        Chiếu Tại Rạp
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Rap.TenRap)
                    </dd>
                </div>
                <div class="form-group">
                    <dt>
                        Giá Vé
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GiaVe)
                    </dd>
                </div>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Xóa" class="btn btn-danger" /> |
                    @Html.ActionLink("Quay lại", "Index")
                </div>
            }
        </div>
    </div>

    <!-- Page Heading -->
    <!-- DataTales Example -->

</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
