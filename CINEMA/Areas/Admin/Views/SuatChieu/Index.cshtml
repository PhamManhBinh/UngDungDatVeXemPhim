@model IEnumerable<CINEMA.EF.SuatChieu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">
        Suất Chiếu @Html.ActionLink("+", "Create", new { controller = "SuatChieu" }, new { @class = "btn btn-success btn-circle pull-left" })
    </h1>
    <div class="text-danger">
        @ViewBag.Error
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Phim</th>
                            <th>Ngày</th>
                            <th>Giờ Bắt Đầu</th>
                            <th>Giờ Kết Thúc</th>
                            <th>Rạp</th>
                            <th>Giá Vé</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Phim</th>
                            <th>Ngày</th>
                            <th>Giờ Bắt Đầu</th>
                            <th>Giờ Kết Thúc</th>
                            <th>Rạp</th>
                            <th>Giá Vé</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Phim.Ten)</td>
                                <td>@String.Format("{0:dd/MM/yyyy}", item.Ngay)</td>
                                <td>@Html.DisplayFor(modelItem => item.ThoiDiemBatDau)</td>
                                <td>@Html.DisplayFor(modelItem => item.ThoiDiemKetThuc)</td>
                                <td>@Html.DisplayFor(modelItem => item.Rap.TenRap)</td>
                                <td>@Html.DisplayFor(modelItem => item.GiaVe)</td>
                                <td>
                                    <a href="@Url.Action("Edit","SuatChieu",new { id=item.id})" class="btn btn-success btn-circle btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete","SuatChieu",new { id=item.id})" class="btn btn-danger btn-circle btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
